@import url('https://fonts.googleapis.com/css?family=Kaushan+Script|Roboto:400,700');

// Variables
media_queries = {
  mobile  : "only screen and (max-width: 414px)",
  tablet  : "only screen and (min-width: 415px) and (max-width: 991px)",
  desktop : "only screen and (min-width: 801px)"
}

deepblue = #3E5369
deepgrey = #363d44

// Mixins
for_breakpoint(breakpoints)
  conditions = ()
  for breakpoint in breakpoints
    push(conditions, media_queries[breakpoint])
  conditions = join(", ", conditions)
  @media conditions
    {block}

vendor(prop, args)
  -webkit-{prop} args
  -moz-{prop} args
  -o-{prop} args
  {prop} args

box-shadow()
  -moz-box-shadow arguments
  -webkit-box-shadow arguments
  box-shadow arguments


// Globals

body
  font-family: 'Roboto', sans-serif
  background: #f5f5f5
  display: flex
  min-height: 100vh
  flex-direction: column

.heading
  font-family: 'Kaushan Script', sans-serif !important

.fiskelogg-logo
  +for_breakpoint(desktop)
    width: 300px
  +for_breakpoint(tablet)
    width: 300px
  +for_breakpoint(mobile)
    width: 200px

.home-buttons
  +for_breakpoint(mobile)
    margin-top: 10px

a, a:visited
  //color: #1bbae1
  transition: 0.3s;
  -webkit-transition: 0.1s;

a:hover, a:focus
  color: #1593b3
  text-decoration: none

#iron-router-progress
  background-color: #FFA700
  box-shadow: 0 0 5px rgba(0, 0, 0, 0.5)

main
  margin: 30px auto
  flex: 1
  width: 100%

#insertCatchForm, #editCatchForm
  +for_breakpoint(mobile)
    min-width: 280px

.bold
  font-weight: bold !important

.navLogo
  height: 25px
  float: left
  margin-top: 5px

#imageheader
  background: url('img/background.jpg')
  background-repeat: no-repeat;
  background-size: cover;
  background-position: bottom;
  height: 50vh
