  margin-top: -30px
  padding-top: 80px
  text-shadow: 1px 1px 4px rgba(0,0,0,.9)
  +for_breakpoint(mobile)
    height: 100vh


// BUTTONS
.btn
  border-width: 0

.at-btn
  border-width: 1px
  background-color: #EFEFEF

.btn-lg
  padding: 11px 16px

.btn-primary
  background-color: rgb(62, 83, 105);
  border-color: #1bbae1
  color: #ffffff !important

  &:hover
    opacity: .9
    color: #ffffff

  &.active
    background-color: #5a7a9c
    color: #ffffff

.btn-group .btn + .btn
  margin-left: 0

.row-items
  margin-top: 50px

.circle
  width: 100px
  height: 100px
  line-height: 100px
  text-align: center
  display: inline-block
  font-size: 64px
  color: #ffffff
  border-radius: 50px
  margin-bottom: 10px
  -webkit-transition: all ease-out 0.25s
  transition: all ease-out 0.25s
  background-color: deepblue

  &:hover
    color: #ffffff
    text-decoration: none
    -webkit-transform: scale(1.2)
    transform: scale(1.2)

// NAVBAR
.navbar
  background: deepgrey
  box-shadow: 0 2px 10px 0 rgba(34,36,38,.4),0 2px 10px 0 rgba(34,36,38,.4);

.js-map
  +for_breakpoint(mobile)
    height: 300px !important

.fiskelogg
  font-family: 'Kaushan Script'
  padding: 7px 10px
  font-size: 26px
  line-height: 35px
  -webkit-font-smoothing: antialiased

.main-header .logo
  font-family: 'Kaushan Script' !important
  font-size: 2em !important

.badge
  vertical-align: baseline;
  margin-right: 4px
  text-shadow: 1px 1px 3px rgba(0,0,0,.4)

.footer
  width: 100%
  padding: 30px
  background-color: deepgrey
  color: #fff
  font-size: 90%
  border-top: 1px solid #3F454A

  i
    font-size: 20px

  .footerLogo
    padding: 0 0 20px

  a, a:visited
    color: #A0A0A0

  a:hover, a:focus
    color: white

  .footerLogo
    a, a:hover, a:visited
      color: white

#filter, #sorts, .quicksearch
  margin-bottom: 10px

#searchbox
  padding-left: 0
  padding-right: 0

#sortAndFilter
  text-align: right
  +for_breakpoint(tablet)
    text-align: center
  +for_breakpoint(mobile)
    text-align: center

.flip-container, .front
	width: 100%
	height: 430px

.front
  +for_breakpoint(mobile)
    height: 300px


.flipper
  transform-style: preserve-3d

/* hide back of pane during swap */
.front
  backface-visibility: hidden
  background: white
  position: absolute
  top: 0
  left: 0
  text-align: center
  overflow: hidden
  box-shadow: 0 2px 4px 0 rgba(34,36,38,.12),0 2px 10px 0 rgba(34,36,38,.08);
  border: 1px solid rgba(34,36,38,.15);

  .itemfooter
    position: absolute
    bottom: 8px
    left: 10px
    right: 10px
    border-top: 1px solid #EEEEEE
    color: #999999
    margin: 15px 0 0
    padding: 8px 0 0
    text-align: center
    text-transform: uppercase
    font-size: .9em

    a, a:visited
      color: #777

    a:hover
      color: #999
      text-decoration: none

  .content
    padding: 15px

    .info
      text-align: center
      font-size: 1.2em
      margin-bottom: .3em
      +for_breakpoint(mobile)
        font-size: 1em

      .species
        font-weight: 700

      i.fa
        margin-right: -12px

      .date
        color: #777

    .details
      font-size: 1em
      +for_breakpoint(mobile)
        font-size: .9em

    +for_breakpoint(mobile)
      padding: 5px

/* front pane, placed above back */
.front
  z-index: 2
  transform: rotateY(0deg)

  .header
    height: 250px
    display: flex
    background: linear-gradient(to bottom, #232F3A 0%, #68819A 100%)
    +for_breakpoint(mobile)
      height: 150px

    .genderIcon
      position: absolute;
      font-size: 1.6em
      font-weight: bold
      top: 10px
      left: 5px
      color: white
      text-shadow: 1px 1px 2px rgba(0,0,0,.8)

.ribbon
  position absolute
  right 0px
  top 0px
  z-index 1
  overflow hidden
  width 75px
  height 75px
  text-align right
  span
    font-size 10px
    font-weight bold
    color #fff
    text-transform uppercase
    text-align center
    line-height 20px
    transform rotate(45deg)
    -webkit-transform rotate(45deg)
    width 100px
    display block
    background #76A700
    position absolute
    top 19px
    right -22px

.breadcrumb
  background: #E2E2E2
  color: #555

  a, a:visited
    color: #777

  a:hover
    color: #999
    text-decoration: none

.img-responsive
  width: 100%

.liste
  +for_breakpoint(tablet)
    margin-top: 20px

  +for_breakpoint(mobile)
    margin-top: 20px

.list-group-item span
  color: #888
  font-weight: 500
  text-transform: uppercase
  font-size: .9em

.list-group
  .ribbon
    right: 15px

.mapRow
  margin-top: 30px

.map-container
  height: 500px
  min-width: 320px
  width: 100%
  position: relative

  +for_breakpoint(mobile)
    min-width: 250px
    width: 100%
    height: 300px

// Isotope

.grid-sizer
  float: left
  width: 33.3333%

.grid-item
  float: left
  width: 33.3333%
  padding: 5px
  height: 420px

  +for_breakpoint(tablet)
    width: 50%

  +for_breakpoint(mobile)
    width: 50%
    height: 280px

.grid-item
  margin-bottom: 30px
